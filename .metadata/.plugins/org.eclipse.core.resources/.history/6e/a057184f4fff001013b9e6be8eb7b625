package tut03;

public class Circle {
	private double radius;
	private String color;
	
	public Circle() {
		
	}
	public Circle(double radius) {
		
	}
	
	public Circle(double radius, String color) {
		super();
		this.radius = radius;
		this.color = color;
	}
	
	public double getRadius() {
		return radius;
	}
	
	public String getColor() {
		return color;
	}
	
	public double getArea() {
		return Math.pow(radius, 2) * Math.PI;
	}
	
	public static void main(String[] args) {
		Circle c1 = new Circle(2.0, "blue");
		Circle c2 = new Circle(2.0, "red");
		Circle c3 = new Circle(1.0, "red");
        System.out.printf("%-.2f %-10s %-5s%n", "Radius", "Color", "Area");
        // Print a separator line
        System.out.printf("%-5s %-10s %-5s%n", "----", "----------", "-----");
        
        // Print data rows using the same format specifiers for alignment
        System.out.printf("%-5d %-10s %-5d%n", c1.getRadius(), c1.getColor(), c1.getArea());
        System.out.printf("%-5d %-10s %-5d%n", c2.getRadius(), c2.getColor(), c2.getArea());
        System.out.printf("%-5d %-10s %-5d%n", c3.getRadius(), c3.getColor(), c3.getArea());
	}
}
